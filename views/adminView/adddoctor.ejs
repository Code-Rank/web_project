  <body>
      <!--Navbar-->
      <%- include('../partial/navbar.ejs') %>

      <!--Admin-->
    <div class="container mt-5 pt-5">
  <div class="row">
    <%- include('../partial/sidebar.ejs') %>
      
<!--Form-->      
    <div class="col-8">
        <div class="card">
  <div class="card-header bg-danger text-white">
    Add Doctor
  </div>
  <div class="card-body">
    
    <form method="post" action="/admin/doctor/add-doctor"> 
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputName">Name</label>
          <input type="name" class="form-control bg-light" name="name" id="inputName" placeholder="Name">
        </div>
        <div class="form-group col-md-6">
          <label for="inputEmail4">Email</label>
          <input type="email" class="form-control bg-light" name="email" id="inputEmail4" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Password</label>
          <input type="password" class="form-control bg-light" name="password" id="inputPassword4" placeholder="Password">
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Confirm Password</label>
          <input type="confirmpassword" class="form-control bg-light" name="confirmpassword" id="inputPassword4" placeholder="Confirm Password">
        </div>
      </div>
      <div class="form-group">
        <label for="inputAddress">Address</label>
        <input type="text" class="form-control bg-light" id="inputAddress" name="address" placeholder="1234 Main St">
      </div>
      <div class="form-group">
        <label for="inputPhone">Phone Number</label>
        <input type="text" class="form-control bg-light" id="inputPhone" name="phonenumber" placeholder="1234 Main St">
      </div>
      <div class="form-group">
        <label for="inputAddress2">Hospital</label>
        <input type="text" class="form-control bg-light" id="inputAddress2" name="hospital" placeholder="Hospital,Clinic">
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputSpecialist">Specialist In</label>
          <input type="text" class="form-control bg-light" id="inputSpecialist" name="specialist">
        </div>
        </div>
        <div class="form-group">
            <label for="exampleFormControlFile1">Add Photo</label><br>
            <input type="file" class="form-control-file mt-2" id="imgInp">
            <img id="blah" src="#" class="img img-thumbnail" width="100px" name="image" />
        </div>
      </div>
      <div class="form-group">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </div>
</div>
    </div>
    </div>
    </div>
</div>


    <script src="assets/js/jquery.min.js"></script>
