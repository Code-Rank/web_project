        <form action="/user/payment_process" method="post">
            <div class="row">
                <div class="col-5">
                    <div class="p-card bg-white p-2 rounded px-3 card_1">
                        <div class="row">
                            <div class="col-12">
                                <h5>
                                    Payemnt summary
                                </h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5" style="text-align: center;">
                                <img src="/uploads/<%=result[0].image%>" alt="" width="80px" />
                            </div>
                            <div class="col-7">
                                <div class="row">
                                    <div class="col-12">
                                        <%=result[0].first_name%> <%=result[0].last_name%> 
                                    </div>
                                    <div class="col-12">
                                        City: <%=result[0].city%>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-7">
                                Date
                            </div>
                            <div class="col-5">
                                <%=appointment_date%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-7">
                                Time
                            </div>
                            <div class="col-5">
                                <%=appointment_time%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-7">
                                Councelling fee
                            </div>
                            <div class="col-5">
                                $<%=result[0].councelling_fee%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-7">
                                Booking fee
                            </div>
                            <div class="col-5">
                                $<%=result[0].booking_fee%>
                            </div>
                        </div>
                        <br />
                        <div class="row" style="color: #fd6342;">
                            <div class="col-7">
                                Total fee
                            </div>
                            <div class="col-5">
                                $<%=Number(result[0].councelling_fee)+Number(result[0].booking_fee)%>
                            </div>
                        </div>
                    </div>
                </div>
                <form action="/user/payment_process" method="post">
                <div class="col-7" style="margin-left: -10%;">
                    <div class="p-card bg-white p-2 rounded px-3 card_2">
                        <div class="row">
                            <div class="col-12">
                                <h5>
                                    
                                    Personal information
                                </h5>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <input type="text" name="appointment_date" id="appointment_date" hidden value="<%=appointment_date%>" />
                            <input type="text" name="appointment_time" id="appointment_time" hidden value="<%=appointment_time%>" />
                            <input type="text" name="doctor_id" id="doctor_id" hidden value="<%=doctor_id%>" />
                            <div class="col-5">
                                <input type="text" name="first_name" id="first_name" placeholder="First name" size="23vw" value="<%=result[0].first_name%>" readonly/>
                            </div>
                            <div class="col-5">
                                <input type="text" name="last_name" id="last_name" placeholder="Last name" size="20vw" value="<%=result[0].last_name%>" readonly/>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-5">
                                <input type="email" name="email" id="email" placeholder="Email" size="23vw" value="<%=result[0].email%>" readonly/>
                            </div>
                            <div class="col-5">
                                <input type="text" name="phone" id="phone" placeholder="Phone" size="20vw" value="<%=result[0].phone%>" readonly/>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-12">
                                <h5>
                                    Payment method
                                </h5>
                            </div>
                        </div>
